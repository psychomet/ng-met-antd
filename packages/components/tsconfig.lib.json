{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "core/src/lib/*.ts",
    "i18n/src/lib/*.ts",
    "i18n/src/lib/**/*.ts",
    "data-picker/src/*.ts",
    "data-picker/src/**/*.ts",
    "calendar/src/**/*.ts"
  ]
}
