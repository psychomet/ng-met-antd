{
  "name": "extensions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/extensions/src",
  "prefix": "app",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/extensions/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/extensions/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/extensions/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/extensions/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/extensions/**/*.ts",
          "packages/extensions/**/*.html",
          "packages/extensions/core/**/*.ts",
          "packages/extensions/core/**/*.html",
          "packages/extensions/i18n/**/*.ts",
          "packages/extensions/i18n/**/*.html",
          "packages/extensions/date-picker/**/*.ts",
          "packages/extensions/date-picker/**/*.html",
          "packages/extensions/calendar/**/*.ts",
          "packages/extensions/calendar/**/*.html"
        ]
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/extensions/release.config.js",
        "parallel": false
      }
    }
  }
}
